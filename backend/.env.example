# ==============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=imobi_db
DB_USER=postgres
DB_PASSWORD=sua_senha_aqui

# Connection Pool
DB_POOL_MIN=0
DB_POOL_MAX=5
