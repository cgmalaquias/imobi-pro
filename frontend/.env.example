# ==============================================
# API CONFIGURATION
# ==============================================
VUE_APP_API_URL=http://localhost:3000/api
VUE_APP_API_TIMEOUT=10000

# ==============================================
# APPLICATION
# ==============================================
VUE_APP_NAME=Imobiliária Pro
VUE_APP_VERSION=1.0.0
VUE_APP_DESCRIPTION=Sistema de Gestão Imobiliária

# ==============================================
# ENVIRONMENT
# ==============================================
NODE_ENV=development

# ==============================================
# ROUTER
# ==============================================
VUE_ROUTER_MODE=history
VUE_ROUTER_BASE=/

# ==============================================
# FEATURE FLAGS
# ==============================================
VUE_APP_ENABLE_PWA=true
VUE_APP_ENABLE_ANALYTICS=false
VUE_APP_ENABLE_SENTRY=false

# ==============================================
# EXTERNAL SERVICES
# ==============================================
# Google Maps
VUE_APP_GOOGLE_MAPS_API_KEY=

# Google Analytics
VUE_APP_GA_TRACKING_ID=

# Facebook Pixel
VUE_APP_FB_PIXEL_ID=

# Sentry
VUE_APP_SENTRY_DSN=

# ==============================================
# STORAGE
# ==============================================
VUE_APP_STORAGE_PREFIX=imobi_
VUE_APP_STORAGE_VERSION=1.0

# ==============================================
# UI CONFIGURATION
# ==============================================
VUE_APP_THEME_PRIMARY=#667eea
VUE_APP_THEME_SECONDARY=#764ba2
VUE_APP_DEFAULT_LOCALE=pt-BR
VUE_APP_ITEMS_PER_PAGE=10

# ==============================================
# UPLOAD CONFIGURATION
# ==============================================
VUE_APP_MAX_FILE_SIZE=5242880
VUE_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
VUE_APP_MAX_FILES_PER_UPLOAD=10

# ==============================================
# CACHE
# ==============================================
VUE_APP_CACHE_ENABLED=true
VUE_APP_CACHE_TTL=3600000

# ==============================================
# DEVELOPMENT
# ==============================================
VUE_APP_DEBUG=true
VUE_APP_MOCK_API=false

# ==============================================
# BUILD
# ==============================================
VUE_APP_PUBLIC_PATH=/
VUE_APP_OUTPUT_DIR=dist
